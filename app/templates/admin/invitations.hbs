<h1>Invitations</h1>

<table class="table table-bordered table-scripted">
    <thead>
        <tr>
            <th class="col-sm-4">ID</th>
            <th class="col-sm-4">E-mail</th>
            <th class="col-sm-1"></th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |invitation|}}
            <tr>
                <th>{{invitation.id}}</th>
                <td>{{invitation.email}}</td>
                <td><button class="btn btn-danger btn-s" {{action 'deleteInvitation' invitation}}>Delete</button></td>
            </tr>
        {{/each}}
    </tbody>
</table>